mixin input(obj)
    -let styleLabelButton=''
    -let styleInputButton=''
    if obj.button 
        -styleLabelButton='input__label_button'
        -styleInputButton='input__input_button'
    .input
        label(for=obj.id class=`input__label `+styleLabelButton)=obj.label
            input(type=obj.type, name=obj.name, placeholder=obj.placeholder, id=obj.id, class=`input__input input__input_${obj.style} `+styleInputButton)
            if obj.button
                .input__success
                    .input__icon_success.icon_mark
                    .input__text_success Looks good!
                .input__danger
                    .input__icon_danger.icon_danger
                    .input__text_danger Please provide a valid input.
            if obj.icon
                p.input__icon(class=obj.icon)
        if obj.button 
            button(type='button' class=`input__button input__button_${obj.style} ${obj.class}`)=obj.button
    //  style: large(height: 52px), default(height: 44px), small(height: 36px)